{
  "cSpell": {
    "language": "en-GB",
    "enabled": false
  },

  "explorer": {
    "buffer": {
      "root": { "template": "[icon & 1] OPEN EDITORS" },
      "tabOnly": true
    },
    "file": {
      "root": { "template": "[icon & 1] PROJECT ([root])" },
      "autoReveal": true
    },
    "focus": true,
    "icon": {
      "enableNerdfont": true
    },
    "mouseMode": "singleclick",
    "keyMappings": {
      "global": {
        "i": false,

        "*": "toggleSelection",
        "<tab>": false,
        "m": "actionMenu",

        "l": ["wait", "expandable?", "expand", "open"],
        "<2-LeftMouse>": [
          "expandable?",
          ["expanded?", "collapse", "expand"],
          "open"
        ],
        "o": ["wait", "expanded?", "collapse", "expand"],
        "<cr>": ["wait", "expandable?", "cd", "open"],
        "e": "open",
        "s": "open:vsplit",
        "u": ["wait", "gotoParent"],

        "yp": "copyFilepath",
        "yn": "copyFilename",
        "yy": "copyFile",
        "dd": "cutFile",
        "p": "pasteFile",
        "df": "delete",

        "A": "addDirectory",
        "R": "rename",

        "g<dot>": "toggleHidden",
        "r": "refresh",
        "q": "quit",
        "<esc>": "esc",

        "f": "search",
        "F": "searchRecursive",

        "<<": "gitStage",
        ">>": "gitUnstage"
      }
    }
  },

  "html": { "autoClosingTags": true },
  "python": { "linting": { "enabled": false } }
}
