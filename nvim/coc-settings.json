{
    // spell checker
    "cSpell.language": "en-GB",
    "cSpell.enabled": false,

    // coc-explorer
    "explorer.focus": false,
    "explorer.icon.enableVimDevicons": true,
	"explorer.keyMappings.global": {
    "i": false, // cancel default mapkey

    "*": "toggleSelection",
    "<tab>": false,
    "m": "actionMenu",

    "l": ["wait", "expandable?", "expand", "open"],
    "<2-LeftMouse>": [
      "expandable?",
      ["expanded?", "collapse", "expand"],
      "open"
    ],
    "o": ["wait", "expanded?", "collapse", "expand"],
    "<cr>": ["wait", "expandable?", "cd", "open"],
    "e": "open",
    "s": "open:vsplit",
    "t": "open:tab",
    "u": ["wait", "gotoParent"],

    "yp": "copyFilepath",
    "yn": "copyFilename",
    "yy": "copyFile",
    "dd": "cutFile",
    "p": "pasteFile",
    "df": "delete",

    "A": "addDirectory",
    "R": "rename",

    "g<dot>": "toggleHidden",
    "r": "refresh",
    "q": "quit",
    "<esc>": "esc",

    "f": "search",
    "F": "searchRecursive",

    "<<": "gitStage",
    ">>": "gitUnstage"
  },

  // coc-html
  "html.autoClosingTags": true,

  // coc-pyright
  "python.linting.enabled": false
}
