{
  /* coc-spell-checker */
  "cSpell": {
    "enabled": false,
    "language": "en-GB"
  },

  /* coc-explorer */
  "explorer": {
    "buffer": {
      "root": { "template": "[icon & 1] OPEN EDITORS" }
    },
    "file": {
      "root": { "template": "[icon & 1] PROJECT ([root])" },
      "autoReveal": true
    },
    "focus": true,
    "icon": {
      "enableNerdfont": true
    },
    "mouseMode": "singleclick",
    "sources": [
      {
        "name": "buffer",
        "expand": true
      },
      {
        "name": "file",
        "expand": true
      }
    ],
    "keyMappings": {
      "global": {
        "i": false,

        "*": "toggleSelection",
        "<tab>": false,
        "m": "actionMenu",

        "l": ["wait", "expandable?", "expand", "open"],
        "<2-LeftMouse>": [
          "expandable?",
          ["expanded?", "collapse", "expand"],
          "open"
        ],
        "o": ["wait", "expanded?", "collapse", "expand"],
        "<cr>": ["wait", "expandable?", "cd", "open"],
        "e": "open",
        "s": "open:vsplit",
        "u": ["wait", "gotoParent"],

        "yp": "copyFilepath",
        "yn": "copyFilename",
        "yy": "copyFile",
        "dd": "cutFile",
        "p": "pasteFile",
        "df": "delete",

        "A": "addDirectory",
        "R": "rename",

        "g<dot>": "toggleHidden",
        "r": "refresh",
        "q": "quit",
        "<esc>": "esc",

        "f": "search",
        "F": "searchRecursive",

        "<<": "gitStage",
        ">>": "gitUnstage"
      }
    }
  },

  /* coc-html */
  "html": { "autoClosingTags": true },

  /* coc-pyright */
  "python": { "linting": { "enabled": false } },

  /* coc-tsserver */
  "typescript": {
    /* Watchman required for this to work */
    "updateImportsOnFileMove": { "enable": true }
  }
}
