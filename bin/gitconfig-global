#!/bin/bash
## ~/.gitconfig is not added to version control to avoid pollution. Run this script as required.
## RESET: echo "" > ~/.gitconfig && gitconfig-global 

## user
git config --global user.name "Rajit Banerjee"
git config --global user.email "rajit.banerjee@ucdconnect.ie"

## core
git config --global core.editor "nvim"
git config --global core.excludesfile "/Users/rajitbanerjee/.gitignore_global"
git config --global --bool core.filemode false

## pager
git config --global pager.diff "delta"
git config --global pager.log "delta"
git config --global pager.reflog "delta"
git config --global pager.show "delta"

# delta
git config --global delta.features "side-by-side line-numbers navigate decorations"
git config --global delta.decorations.commit-decoration-style "bold yellow box ul"
git config --global delta.decorations.file-style "bold yellow ul"
git config --global delta.decorations.file-decoration-style "none"
git config --global delta.whitespace-error-style "22 reverse"

# others
git config --global init.defaultBranch "main"
git config --global --bool pull.rebase true
git config --global --bool fetch.prune true
git config --global merge.conflictstyle "diff3"
git config --global interactive.diffFilter "delta --color-only"
git config --global diff.colorMoved "default"

