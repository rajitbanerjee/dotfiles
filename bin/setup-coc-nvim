#!/bin/bash
set -euo pipefail
IFS=$'\n\t'

# Install coc.nvim extensions
extpath=~/.config/coc/extensions
mkdir -p "$extpath"
cd "$extpath" || return
if [ ! -f package.json ]; then
    echo '{"dependencies":{}}' >package.json
fi

npm install \
    coc-clangd \
    coc-css \
    coc-explorer \
    coc-floatinput \
    coc-highlight \
    coc-html \
    coc-java \
    coc-jedi \
    coc-json \
    coc-snippets \
    coc-spell-checker \
    coc-sql \
    coc-tsserver \
    coc-vimlsp \
    coc-yaml \
    --install-strategy=shallow --ignore-scripts --no-bin-links --no-package-lock --omit=dev

# https://github.com/neoclide/coc-java/issues/99#issuecomment-663856695
coc_java_data="$extpath/coc-java-data/server"
mkdir -p $coc_java_data
rm -rf "${coc_java_data:?}/*"
jdt_ls="jdt-language-server-0.57.0-202006172108.tar.gz"
wget https://download.eclipse.org/jdtls/milestones/0.57.0/$jdt_ls
tar -xf "$jdt_ls" -C "$coc_java_data"
rm -rf "$jdt_ls"
