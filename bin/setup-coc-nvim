#!/bin/bash
set -euo pipefail
IFS=$'\n\t'

# Install coc.nvim extensions
extpath=~/.config/coc/extensions
mkdir -p "$extpath"
cd "$extpath" || return
if [ ! -f package.json ]; then
    echo '{"dependencies":{}}' >package.json
fi

npm install \
    coc-spell-checker \
    coc-snippets \
    coc-explorer \
    coc-highlight \
    coc-vimlsp \
    coc-java \
    coc-jedi \
    coc-html \
    coc-css \
    coc-tsserver \
    coc-json \
    coc-yaml \
    coc-sql \
    coc-clangd \
    --global-style --ignore-scripts --no-bin-links --no-package-lock --only=prod
