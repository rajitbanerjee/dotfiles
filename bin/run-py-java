#!/bin/bash
<<DETAILS
Run all python/java programs in a specified directory.
Designed to be used in my leetcode repository (https://github.com/rajitbanerjee/leetcode).

Usage examples:
For Python (defualt without -java flag),
$ ./run-py-java src/plusOne

For Java, 
$ ./run-py-java src/plusOne -java 
DETAILS

print_usage() {
    echo "Usage: ./run-py-java src/<dir_name> [-java]"
    echo "Note: Python is used by default (without -java flag)"
    exit 1
}

if [[ $1 == "" ]]
then
    print_usage
else
    DIR=$1
    for FILE in $DIR*
    do
        if [[ $2 == "-java" ]]
        then
            if [[ ${FILE: -5} == ".java" ]]
            then
                echo "Running: $FILE"
                javac $FILE
                java ${FILE##/*}
            fi
        elif [[ $2 == "-py" ]] || [[ $2 == "-python" ]] || [[ $2 == "" ]]
        then
            if [[ ${FILE: -3} == ".py" ]]
            then
                echo "Running: $FILE"
                python $FILE
            fi
        else 
            print_usage
        fi
    done
fi